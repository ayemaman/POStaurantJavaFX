<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: yellow;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="postaurant.PaymentsController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="400.0" prefWidth="440.0">
               <children>
                  <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="logoImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <Region prefHeight="200.0" prefWidth="290.0" />
                        <VBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="50.0">
                           <children>
                              <Label text="TOTAL:" />
                              <Label text="PAID:" />
                              <Label text="LEFT:" />
                           </children>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="50.0">
                           <children>
                              <Label fx:id="totalLabel" text="0.00£" />
                              <Label fx:id="paidLabel" text="0.00£" />
                              <Label fx:id="leftLabel" text="0.00£" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <ListView fx:id="paymentsListView" prefHeight="350.0" prefWidth="200.0" />
               </children>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="400.0" prefWidth="150.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="150.0" text="SAVE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Button>
                  <Button fx:id="addButton" mnemonicParsing="false" prefHeight="75.0" prefWidth="150.0" text="ADD">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></Button>
                  <Button fx:id="removeButton" mnemonicParsing="false" prefHeight="75.0" prefWidth="150.0" text="REMOVE">
                     <VBox.margin>
                        <Insets bottom="20.0" top="10.0" />
                     </VBox.margin></Button>
                  <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="150.0" text="EXIT" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
